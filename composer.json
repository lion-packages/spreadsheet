{
    "name": "lion/spreadsheet",
    "description": "library to facilitate the use of spreadsheet",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lion\\Spreadsheet\\": "src/LionSpreadsheet/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "phpoffice/phpspreadsheet": "^2.2 || ^4.0",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.12",
        "lion/test": "^3.3",
        "phpunit/phpunit": "^12.0",
        "overtrue/phplint": "^9.5",
        "infection/infection": "^0.29.14"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": false
        }
    }
}
